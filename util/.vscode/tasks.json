{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source /home/jacky/git/zephyr-workspace/.venv/bin/activate && west build -- -DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
            "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}/smart-roomba/mcu"
            }
        },
