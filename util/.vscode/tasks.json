{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Zephyr Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source /home/jacky/git/zephyr-workspace/.venv/bin/activate && west build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/smart-roomba/mcu"
            }
        },
        {
            "label": "Clean and Build",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source /home/jacky/git/zephyr-workspace/.venv/bin/activate && west build -p always"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/smart-roomba/mcu"
            }
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source /home/jacky/git/zephyr-workspace/.venv/bin/activate && west flash"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/smart-roomba/mcu"
            }
        }
    ]
}